generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String?        @unique
  name          String?
  plan          PlanTier       @default(FREE)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  decks         Deck[]
  refreshTokens RefreshToken[]
  monthlyUsage  MonthlyUsage[]
  ingestionDrafts IngestionDraft[]
  reviews       Review[]
}

model Deck {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cards       Card[]
  ingestionDrafts IngestionDraft[]
  reviews       Review[]

  @@index([userId])
}

model Card {
  id        String   @id @default(cuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deckId    String
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
  scheduleState ScheduleState?
  reviews   Review[]

  @@index([deckId])
}

model ScheduleState {
  id              String   @id @default(cuid())
  cardId          String   @unique
  card            Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  dueAt           DateTime
  lastReviewedAt  DateTime?
  intervalMinutes Int      @default(0)
  repetitions     Int      @default(0)
  easeFactor      Float    @default(2.5)
  fsrsState       Int      @default(0)
  fsrsStability   Float    @default(0)
  fsrsDifficulty  Float    @default(0)
  fsrsElapsedDays Int      @default(0)
  fsrsScheduledDays Int    @default(0)
  fsrsLearningSteps Int    @default(0)
  fsrsLapses      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([dueAt])
}

model Review {
  id               String       @id @default(cuid())
  userId           String
  user             User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  deckId           String
  deck             Deck         @relation(fields: [deckId], references: [id], onDelete: Cascade)
  cardId           String
  card             Card         @relation(fields: [cardId], references: [id], onDelete: Cascade)
  rating           ReviewRating
  previousDueAt    DateTime?
  scheduledDueAt   DateTime
  previousInterval Int
  nextInterval     Int
  createdAt        DateTime     @default(now())

  @@index([userId, createdAt])
  @@index([deckId, createdAt])
  @@index([cardId, createdAt])
}

model RefreshToken {
  id                String    @id @default(cuid())
  tokenHash         String    @unique
  familyId          String
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime  @default(now())
  expiresAt         DateTime
  revokedAt         DateTime?
  replacedByTokenId String?
  userAgent         String?
  ipAddress         String?

  @@index([userId])
  @@index([familyId])
  @@index([expiresAt])
}

model OAuthState {
  id           String    @id @default(cuid())
  stateHash    String    @unique
  codeVerifier String
  client       String
  redirectUri  String
  createdAt    DateTime  @default(now())
  expiresAt    DateTime
  consumedAt   DateTime?

  @@index([expiresAt])
  @@index([client])
}

model MonthlyUsage {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  monthKey            String
  documentGenerations Int      @default(0)
  chatTurns           Int      @default(0)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([userId, monthKey])
  @@index([monthKey])
}

model IngestionDraft {
  id          String              @id @default(cuid())
  userId      String
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  deckId      String
  deck        Deck                @relation(fields: [deckId], references: [id], onDelete: Cascade)
  status      IngestionDraftStatus @default(PENDING)
  filename    String
  mimeType    String
  plan        PlanTier
  modelUsed   String
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  expiresAt   DateTime
  committedAt DateTime?
  cards       IngestionDraftCard[]

  @@index([userId, status])
  @@index([deckId, status])
  @@index([expiresAt])
}

model IngestionDraftCard {
  id        String         @id @default(cuid())
  draftId   String
  draft     IngestionDraft @relation(fields: [draftId], references: [id], onDelete: Cascade)
  position  Int
  question  String
  answer    String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@index([draftId, position])
}

enum PlanTier {
  FREE
  PRO
}

enum IngestionDraftStatus {
  PENDING
  COMMITTED
  DISCARDED
}

enum ReviewRating {
  AGAIN
  HARD
  GOOD
  EASY
}
