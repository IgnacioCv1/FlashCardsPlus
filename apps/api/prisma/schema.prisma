generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String?        @unique
  name          String?
  plan          PlanTier       @default(FREE)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  decks         Deck[]
  refreshTokens RefreshToken[]
  monthlyUsage  MonthlyUsage[]
}

model Deck {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cards       Card[]

  @@index([userId])
}

model Card {
  id        String   @id @default(cuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deckId    String
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@index([deckId])
}

model RefreshToken {
  id                String    @id @default(cuid())
  tokenHash         String    @unique
  familyId          String
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime  @default(now())
  expiresAt         DateTime
  revokedAt         DateTime?
  replacedByTokenId String?
  userAgent         String?
  ipAddress         String?

  @@index([userId])
  @@index([familyId])
  @@index([expiresAt])
}

model OAuthState {
  id           String    @id @default(cuid())
  stateHash    String    @unique
  codeVerifier String
  client       String
  redirectUri  String
  createdAt    DateTime  @default(now())
  expiresAt    DateTime
  consumedAt   DateTime?

  @@index([expiresAt])
  @@index([client])
}

model MonthlyUsage {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  monthKey            String
  documentGenerations Int      @default(0)
  chatTurns           Int      @default(0)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([userId, monthKey])
  @@index([monthKey])
}

enum PlanTier {
  FREE
  PRO
}
