generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String?        @unique
  name          String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  decks         Deck[]
  refreshTokens RefreshToken[]
}

model Deck {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cards       Card[]

  @@index([userId])
}

model Card {
  id        String   @id @default(cuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deckId    String
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@index([deckId])
}

model RefreshToken {
  id                String    @id @default(cuid())
  tokenHash         String    @unique
  familyId          String
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime  @default(now())
  expiresAt         DateTime
  revokedAt         DateTime?
  replacedByTokenId String?
  userAgent         String?
  ipAddress         String?

  @@index([userId])
  @@index([familyId])
  @@index([expiresAt])
}
